<Window x:Class="AplikacjaDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplikacjaDesktop"
        mc:Ignorable="d"
        Title="AplikacjaDesktop Piotr Bacior 15722 WSEI Krakow" Height="450" Width="800">
    <Grid>
        <Canvas Name="NaszPlaygroundPB" Background="LightGray" Margin="10"/>
        
        <Button Content="StartPB"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="100"
                Height="30"
                Margin="10,10,0,0"
                Click="Start_Click"/>

        <Button Content="ZakończPB"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="100"
                Height="30"
                Margin="120,10,0,0"
                Click="Finish_Click"/>
    </Grid>
</Window>